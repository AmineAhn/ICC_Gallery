<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/ivPhotoImg"
        android:layout_width                ="150dp"
        android:layout_height               ="150dp"
        android:layout_alignParentLeft      ="true"
        android:layout_alignParentStart     ="true"
        android:layout_alignParentTop       ="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf    ="parent"
        app:srcCompat                       ="@mipmap/ic_launcher"
        />

    <TextView
        android:id="@+id/tvPhotoName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ivPhotoImg"
        android:layout_alignRight="@+id/ivPhotoImg"
        android:layout_below="@+id/ivPhotoImg"
        android:text="@string/tvPhotoName"
        android:textAlignment="center"
        android:textColor="#0e11d1"
        android:textSize                    ="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf ="@+id/ivPhotoImg" />


</android.support.constraint.ConstraintLayout>